#!/usr/bin/python3
'''Declaration of a Base Class '''


class Base:
    ''' A base Class.

    Initialisation of class variables:
        __nb_objects: private
        id
    '''
    #!/usr/bin/python3
""" 0-main """
from models.base import Base

if __name__ == "__main__":

    b1 = Base()
    print(b1.id)

    b2 = Base()
    print(b2.id)

    b3 = Base()
    print(b3.id)

    b4 = Base(12)
    print(b4.id)

    b5 = Base()
    print(b5.id)
    def __init__(self, id=None):
        ''' Constructor methos '''
        self.__nb_objects = 0
        if id == None:
            self.__nb_objects += 1
            self.id = self.__nb_objects
        else:
            self.id = id
